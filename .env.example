# Node environment (development, production, test)
NODE_ENV=development

# Application port
PORT=3000

# Database connection string
# Format: postgres://username:password@host:port/database_name
DATABASE_URL=postgres://username:password@localhost:5432/erm_platform

# Redis connection string
# Format: redis://host:port
REDIS_URL=redis://localhost:6379

# JWT configuration
# Secret should be a long, random string. Never share or commit the actual secret.
JWT_SECRET=your_jwt_secret_here
# JWT expiration time (e.g., 60, "2 days", "10h", "7d")
JWT_EXPIRATION=1h

# Encryption key for sensitive data
# Must be exactly 32 characters long
ENCRYPTION_KEY=your_32_character_encryption_key

# SMTP configuration for sending emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@ermexperts.com

# Frontend URL for email links and CORS
FRONTEND_URL=http://localhost:3000

# API rate limiting
# Maximum number of requests per window
API_RATE_LIMIT=100
# Time window for rate limiting (e.g., "15m" for 15 minutes)
API_RATE_LIMIT_WINDOW=15m

# Logging configuration
# LOG_LEVEL options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Third-party service API keys (if applicable)
# EXAMPLE_API_KEY=your_api_key_here

